{
  "version": "0.7.0",
  "devDependencies": {
    "@vtex/intl-equalizer": "^2.0.1",
    "husky": "^1.3.1"
  },
  "scripts": {
    "verify": "yarn messages && cd ./react && yarn lint && yarn test",
    "messages": "intl-equalizer && intl-equalizer --fix && git commit --amend --no-edit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn messages && cd ./react && yarn lint",
      "pre-push": "yarn verify"
    }
  },
  "intl-equalizer": {
    "localeDirectory": "react/locales/"
  }
}
